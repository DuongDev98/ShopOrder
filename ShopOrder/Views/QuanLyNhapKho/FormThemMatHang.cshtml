@using ShopOrder.Entities
@model DMATHANG
<div class="divFormThem">
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.NAME)

    <div class="row p-r-10 m-b-10">
        <label class="col-2" for="ipDONGIA">Đơn giá:</label>
        <div class="col-md-8 p-lr-0">
            <input type="number" class="form-control input-number-custom col-3" value="@Model.GIANHAP" id="ipDONGIA">
        </div>
    </div>

    <div class="row rowItem p-r-10 m-b-10">
        @*size*@
        <label class="col-2" for="lueDSIZEID">Size:</label>
        <select class="form-control col-2" id="lueDSIZEID">
            <option value=""></option>
            @{
                if (Model.DSIZECHITIETs != null)
                {
                    foreach (DSIZECHITIET itemChiTiet in Model.DSIZECHITIETs)
                    {
                        <option value="@itemChiTiet.DSIZEID">@itemChiTiet.DSIZE.NAME</option>
                    }
                }
            }
        </select>

        @*mau*@
        <label class="col-1" for="lueDMAUID">Màu:</label>
        <select class="form-control col-2" id="lueDMAUID">
            <option value=""></option>
            @{
                if (Model.DMAUCHITIETs != null)
                {
                    foreach (DMAUCHITIET itemChiTiet in Model.DMAUCHITIETs)
                    {
                        <option value="@itemChiTiet.DMAUID">@itemChiTiet.DMAU.NAME</option>
                    }
                }
            }
        </select>

        @*soluong*@
        <label class="col-1" for="ipSOLUONG">SL:</label>
        <input type="number" class="form-control col-2" min="1" value="1" id="ipSOLUONG">

        @*btn*@
        <div class="btn btn-success m-l-10 btnAdd">+</div>
    </div>
</div>
<script>
    $('.divFormThem').on("click", ".btnAdd", function (e) {
        let tmp = $(this).parent().clone();
        tmp.find(".btnAdd").remove();
        tmp.find("#ipSOLUONG").val(1);
        tmp.append('<div class="btn btn-danger m-l-10 btnRemove">-</div>');
        $(this).parent().parent().append(tmp);
    });

    $('.divFormThem').on("click", ".btnRemove", function (e) {
        $(this).parent().remove();
    });
</script>