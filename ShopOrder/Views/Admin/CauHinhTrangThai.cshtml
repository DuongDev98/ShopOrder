@model ShopOrder.Entities.SCONFIG
@{
    ViewBag.Title = "Cấu hình trạng thái đơn";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<h4>Dữ liệu cấu hình trạng thái</h4>
<form method="post" action="/admin/cauhinhtrangthai">
    @Html.HiddenFor(x=>x.ID)
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.TTSAUTHANHTOANID, "Trạng thái sau thanh toán", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TTSAUTHANHTOANID", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TTTAODIEUPHOIID, "Trạng thái sau tạo điều phối", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TTTAODIEUPHOIID", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TTXACNHANDANHANID, "Trạng thái có thể xác nhận kết thúc", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TTXACNHANDANHANID", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TTDANHANID, "Trạng thái kết thúc", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TTDANHANID", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-success m-t-10">Lưu dữ liệu</button>
</form>