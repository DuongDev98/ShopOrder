@model IEnumerable<ShopOrder.Models.DMATHANG>

@{
    ViewBag.Title = "Thêm mới";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h4 class="page-header">Danh mục mặt hàng</h4>
    </div>
</div>
<p>
    @Html.ActionLink("Thêm mới", "Edit", null, new { @class = "btn btn-info" })
</p>
<link href="~/Content/Admin/css/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
<link href="~/Content/Admin/css/dataTables/dataTables.responsive.css" rel="stylesheet" />
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover" id="dataTables">
        <thead>
            <tr>
                <th>STT</th>
                <th>Mã hàng</th>
                <th>Mặt hàng</th>
                <th>Giá bán</th>
                <th>Giá bán 2</th>
                <th>Giá bán 3</th>
                <th>Giá bán 4</th>
                <th>Hàng sắp về</th>
                <th>Hàng mới về</th>
                <th>Hàng sale</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                int count = 0;
                foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@item.CODE</td>
                        <td>@item.NAME</td>
                        <td>@((item.GIABAN ?? 0).ToString("n0"))</td>
                        <td>@((item.GIABAN2 ?? 0).ToString("n0"))</td>
                        <td>@((item.GIABAN3 ?? 0).ToString("n0"))</td>
                        <td>@((item.GIABAN4 ?? 0).ToString("n0"))</td>
                        <td><span style="display:none">@item.HANGSAPVE</span><input type="checkbox" @(item.HANGSAPVE > 0 ? "checked" : "") disabled /></td>
                        <td><span style="display:none">@item.HANGMOIVE</span><input type="checkbox" @(item.HANGMOIVE > 0 ? "checked" : "") disabled /></td>
                        <td><span style="display:none">@item.HANGSALE</span><input type="checkbox" @(item.HANGSALE > 0 ? "checked" : "") disabled /></td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-warning" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<script src="~/Content/Admin/js/dataTables/jquery.dataTables.min.js"></script>
<script src="~/Content/Admin/js/dataTables/dataTables.bootstrap.min.js"></script>
<script>
    $(document).ready(function () {
        $('#dataTables').DataTable({
            responsive: true
        });
    });
</script>