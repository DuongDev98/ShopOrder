@model List<ShopOrder.Entities.DMATHANG>
@{
    if (Model == null || Model.Count == 0)
    {
        return;
    }
}

<section class="sec-product bg0 p-t-30 p-b-30">
    <div class="container">
        <div class="p-b-32">
            <h5 class="ltext-101 cl5 txt-center respon1">
                @ViewBag.TieuDe
            </h5>
        </div>

        <!-- Nội dung -->
        <div class="wrap-slick2">
            <div class="slick2">
                @{
                    foreach (var item in Model)
                    {
                        <div class="item-slick2 p-l-15 p-r-15 p-t-15 p-b-15 itemMatHang" data-id="@item.ID">
                            <!-- Block2 -->
                            <div class="block2">
                                <div class="block2-pic hov-img0">
                                    <img src="~/Images/Items/@((item.DANHs == null || item.DANHs.Count == 0) ? "no-image.jpg" : item.DANHs.ElementAt(0).NAME)" alt="IMG-PRODUCT">
                                    <a href="#" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 js-show-modal1">
                                        View
                                    </a>
                                </div>

                                <div class="block2-txt flex-w flex-t p-t-14">
                                    <div class="block2-txt-child1 flex-col-l ">
                                        <a href="product-detail.html" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                            @item.NAME
                                        </a>

                                        <span class="stext-105 cl3">
                                            @((item.GIABAN ?? 0).ToString("n0")) vnđ
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>