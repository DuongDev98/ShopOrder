@model ShopOrder.Entities.DMATHANG
@{
    if (Model == null)
    {
        <div class="alert alert-danger" role="alert">
            Có lỗi trong quá trình lấy dữ liệu mặt hàng
        </div>
        return;
    }
}

<form onsubmit="return false;">
    @*dữ liệu ẩn*@
    <input id="ipDMATHANGID" name="DMATHANGID" value="@Model.ID" hidden />
    <input id="ipDONGIA" name="DONGIA" value="@Model.GIABAN" hidden />

    @*form*@
    <div class="bg0 p-t-60 p-b-30 p-lr-15-lg how-pos3-parent">
        <button class="how-pos3 hov3 trans-04 js-hide-modal1">
            <img src="Content/Shop/images/icons/icon-close.png" alt="CLOSE">
        </button>

        <div class="row">
            <div class="col-md-6 col-lg-7 p-b-30">
                <div class="p-l-25 p-r-30 p-lr-0-lg">
                    <div class="wrap-slick3 flex-sb flex-w">
                        <div class="wrap-slick3-dots"></div>
                        <div class="wrap-slick3-arrows flex-sb-m flex-w"></div>

                        <div class="slick3 gallery-lb">
                            @{
                                if (Model.DANHs != null && Model.DANHs.Count > 0)
                                {
                                    foreach (var item in Model.DANHs)
                                    {
                                        <div class="item-slick3" data-thumb="/Images/Items/@(item.NAME)">
                                            <div class="wrap-pic-w pos-relative">
                                                <img src="/Images/Items/@(item.NAME)" alt="IMG-PRODUCT">

                                                <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="~/Images/Items/@(item.NAME)">
                                                    <i class="fa fa-expand"></i>
                                                </a>
                                            </div>
                                        </div>
                                    }
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-5 p-b-30">
                <div class="p-r-50 p-t-5 p-lr-0-lg">
                    <h4 class="mtext-105 cl2 js-name-detail p-b-14">
                        @Model.NAME
                    </h4>

                    <span class="mtext-106 cl2">
                        @((Model.GIABAN ?? 0).ToString("n0")) vnđ
                    </span>

                    <p class="stext-102 cl3 p-t-23">
                        Nulla eget sem vitae eros pharetra viverra. Nam vitae luctus ligula. Mauris consequat ornare feugiat.
                    </p>

                    <!--  -->
                    <div class="p-t-33">
                        @{
                            if (Model.DSIZECHITIETs != null && Model.DSIZECHITIETs.Count > 0)
                            {
                                <div class="flex-w flex-r-m p-b-10">
                                    <div class="size-203 flex-c-m respon6">
                                    </div>

                                    <div class="size-204 respon6-next">
                                        <div class="rs1-select2 bor8 bg0">
                                            <select id="ipDSIZEID" class="js-select2" name="DSIZEID">
                                                <option value="">Chọn size</option>
                                                @{
                                                    foreach (var item in Model.DSIZECHITIETs)
                                                    {
                                                        <option value="@item.DSIZEID">@item.DSIZE.NAME</option>
                                                    }
                                                }
                                            </select>
                                            <div class="dropDownSelect2"></div>
                                        </div>
                                    </div>
                                </div>
                            }

                            if (Model.DMAUCHITIETs != null && Model.DMAUCHITIETs.Count > 0)
                            {
                                <div class="flex-w flex-r-m p-b-10">
                                    <div class="size-203 flex-c-m respon6">
                                    </div>

                                    <div class="size-204 respon6-next">
                                        <div class="rs1-select2 bor8 bg0">
                                            <select id="ipDMAUID" class="js-select2" name="DMAUID">
                                                <option value="">Chọn màu</option>
                                                @{
                                                    foreach (var item in Model.DMAUCHITIETs)
                                                    {
                                                        <option value="@item.DMAUID">@item.DMAU.NAME</option>
                                                    }
                                                }
                                            </select>
                                            <div class="dropDownSelect2"></div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }

                        <div class="flex-w flex-r-m p-b-10">
                            <div class="size-204 flex-w flex-m respon6-next">
                                <div class="wrap-num-product flex-w m-r-20 m-tb-10">
                                    <div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
                                        <i class="fs-16 zmdi zmdi-minus"></i>
                                    </div>
                                    <input id="ipSOLUONG" class="mtext-104 cl3 txt-center num-product" type="number" name="SOLUONG" value="1">
                                    <div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
                                        <i class="fs-16 zmdi zmdi-plus"></i>
                                    </div>
                                </div>

                                <button class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 js-addcart-detail">
                                    Thêm vào giỏ hàng
                                </button>
                            </div>
                        </div>
                    </div>

                    <!--  -->
                    @*<div class="flex-w flex-m p-l-100 p-t-40 respon7">
                            <div class="flex-m bor9 p-r-10 m-r-11">
                                <a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 js-addwish-detail tooltip100" data-tooltip="Add to Wishlist">
                                    <i class="zmdi zmdi-favorite"></i>
                                </a>
                            </div>

                            <a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="Facebook">
                                <i class="fa fa-facebook"></i>
                            </a>

                            <a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="Twitter">
                                <i class="fa fa-twitter"></i>
                            </a>

                            <a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="Google Plus">
                                <i class="fa fa-google-plus"></i>
                            </a>
                        </div>*@
                </div>
            </div>
        </div>
    </div>
</form>

<script src="~/Content/Shop/vendor/select2/select2.min.js"></script>
<script>
    $(".js-select2").each(function () {
        $(this).select2({
            minimumResultsForSearch: 10,
            dropdownParent: $(this).next('.dropDownSelect2')
        });
    })</script>
<script src="~/Content/Shop/vendor/slick/slick.min.js"></script>
<script src="~/Content/Shop/js/main.js"></script>
<script src="~/Content/Shop/vendor/MagnificPopup/jquery.magnific-popup.min.js"></script>
@*<script src="~/Content/Shop/vendor/sweetalert/sweetalert.min.js"></script>*@
<script>
    $('.wrap-slick3').each(function () {
        $(this).find('.slick3').slick({
            slidesToShow: 1,
            slidesToScroll: 1,
            fade: true,
            infinite: true,
            autoplay: false,
            autoplaySpeed: 6000,
            arrows: true,
            appendArrows: $(this).find('.wrap-slick3-arrows'),
            prevArrow: '<button class="arrow-slick3 prev-slick3"><i class="fa fa-angle-left" aria-hidden="true"></i></button>',
            nextArrow: '<button class="arrow-slick3 next-slick3"><i class="fa fa-angle-right" aria-hidden="true"></i></button>',
            dots: true,
            appendDots: $(this).find('.wrap-slick3-dots'),
            dotsClass: 'slick3-dots',
            customPaging: function (slick, index) {
                var portrait = $(slick.$slides[index]).data('thumb');
                return '<img src=" ' + portrait + ' "/><div class="slick3-dot-overlay"></div>';
            },
        });
    });

    $('.gallery-lb').each(function () {
        $(this).magnificPopup({
            delegate: 'a',
            type: 'image',
            gallery: {
                enabled: true
            },
            mainClass: 'mfp-fade'
        });
    });

    $('.js-addcart-detail').click(function (e) {
        e.preventDefault();
        let form = $(this).closest('form');
        $.post("/Cart/AddToCart", form.serializeArray(), function (success) {
            if (success == "ok") {
                var nameProduct = form.find('.js-name-detail').html();
                swal(nameProduct, "Đã thêm vào giỏ hàng!", "success");
            } else {
                swal("", success, "error");
            }
        });
    });

    $('.btn-num-product-down').on('click', function () {
        var numProduct = Number($(this).next().val());
        if (numProduct > 0) $(this).next().val(numProduct - 1);
    });

    $('.btn-num-product-up').on('click', function () {
        var numProduct = Number($(this).prev().val());
        $(this).prev().val(numProduct + 1);
    });
</script>