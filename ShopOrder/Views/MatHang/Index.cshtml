@model IEnumerable<ShopOrder.Entities.DMATHANG>

@{
    ViewBag.Title = "Danh mục mặt hàng";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<div class="modal-body no-padding">
    <p>
        @Html.ActionLink("Thêm mới", "Edit", null, new { @class = "btn btn-info" })
    </p>
</div>
<div class="card">
    <div class="card-body">
        <table class="table table-striped table-bordered table-hover dynamic-table">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Mã hàng</th>
                    <th>Mặt hàng</th>
                    <th>Giá nhập</th>
                    <th>Giá bán</th>
                    <th>Giá bán 2</th>
                    <th>Cửa hàng</th>
                    <th>Hàng sale</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    int count = 0;
                    foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.CODE</td>
                            <td>@item.NAME</td>
                            <td>@((item.GIANHAP ?? 0).ToString("n0"))</td>
                            <td>@((item.GIABAN ?? 0).ToString("n0"))</td>
                            <td>@((item.GIABAN2 ?? 0).ToString("n0"))</td>
                            <td>@(item.DNHANVIEN != null ? item.DNHANVIEN.NAME : "")</td>
                            <td><span style="display:none">@item.HANGSALE</span><input type="checkbox" @(item.HANGSALE > 0 ? "checked" : "") disabled /></td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-warning" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>